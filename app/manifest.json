{
	"name": "Avalon miner",
	"version": "1.2.1",
	"description": "Chrome BTC Miner for Avalon Devices",
	"manifest_version": 2,
	"minimum_chrome_version": "42.0.2311.90",
	"app": {
		"background": {
			"scripts": [
				"sha256.js",
				"avalon.js",
				"background.js"]
		}
	},
	"permissions": [
		"http://*/",
		"https://*/",
		"storage",
		"hid",
		{
			"usbDevices": [{
				"vendorId": 10737,
				"productId": 13299
			}, {
				"vendorId": 10737,
				"productId": 16625
			}]
		}
	],
	"icons": {
		"16": "assets/avalon_16.png",
		"128": "assets/avalon_128.png"
	},
	"sockets": {
		"tcp": {"connect" : ""}
	}
}
