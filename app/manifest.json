{
	"name": "Avalon miner",
	"version": "0.9",
	"description": "Chrome Miner for Avalon miners",
	"manifest_version": 2,
	"minimum_chrome_version": "42.0.2311.90",
	"app": {
		"background": {
			"scripts": [
				"utils.js",
				"driver.js",
				"pool.js",
				"miner.js",
				"background.js"]
		}
	},
	"permissions": [
		"http://*/",
		"storage",
		"hid",
		{
			"usbDevices": [{
				"vendorId": 10737,
				"productId": 13297
			}]
		}
	],
	"icons": {
		"16": "assets/avalon_16.png",
		"128": "assets/avalon_128.png"
	},
	"sockets": {
		"tcp": {"connect" : ""}
	}
}
